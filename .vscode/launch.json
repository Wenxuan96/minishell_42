{
	"version": "0.2.0",
	"configurations": [
	  {
		"name": "Debug Minishell",
		"type": "cppdbg",
		"request": "launch",
		"program": "${workspaceFolder}/minishell",
		"args": [],
		"stopAtEntry": true,
		"cwd": "${workspaceFolder}",
		"environment": [],
		"externalConsole": true, // âœ… Open in a native terminal
		"MIMode": "gdb",
		"miDebuggerPath": "/usr/bin/gdb",
		"setupCommands": [
		  {
			"description": "Enable pretty-printing for gdb",
			"text": "-enable-pretty-printing",
			"ignoreFailures": true
		  },
		  {
			"description": "Set follow-fork-mode to parent",
			"text": "set follow-fork-mode parent",
			"ignoreFailures": true
		  }
		]
	  }
	]
  }
  
  
